{
  "name": "Secarta - Dev",
  "author": "",
  "version": "0.0.1",
  "description": "Measure Security in Code",
  "manifest_version": 2,
  "permissions": ["storage", "https://app.returntocorp.com/*/*", "activeTab"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": true
  },
  "applications": {
    "gecko": {
      "id": "secarta-extension@returntocorp.com"
    }
  },
  "browser_action": {
    "default_title": "Secarta - Dev",
    "default_icon": "secarta.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*"],
      "css": ["src/github/styles.css"],
      "js": ["src/github/inject.js"]
    },
    {
      "matches": ["https://app.returntocorp.com/*"],
      "js": ["src/returntocorp/steal-token.js"]
    },
    {
      "matches": ["https://*.returntocorp.com/*", "http://localhost:3000/*"],
      "js": ["src/returntocorp/inject.js"]
    }
  ]
}
